@model Chatty.Controllers.LoginViewModel
<div class="d-flex justify-content-center row h-100 p-5">
    @if (!string.IsNullOrEmpty(TempData["SuccessMail"]?.ToString()))
    {
        <p class="text-success d-block w-100">@TempData["SuccessMail"].ToString() hesabı başarı ile oluşturuldu.</p>
    }
    <div class="card col-12">
        <div class="card-header">
            <h3>Giriş</h3>
        </div>
        <div class="card-body">
            <form asp-action="Login">
                <div class="input-group form-group">
                    <input type="text" class="form-control" placeholder="email" asp-for="Email">
                    <span class="text-danger d-block w-100" asp-validation-for="Email"></span>
                </div>
                <div class="input-group form-group">
                    <input type="password" class="form-control" placeholder="şifre" asp-for="Password">
                    <span class="text-danger d-block w-100" asp-validation-for="Password"></span>
                </div>
                <div class="form-group">
                    <a asp-action="Create" class="btn float-left login_btn">Kayıt Sayfasına Git</a>
                    <input type="submit" value="Giriş" class="btn btn-primary float-right login_btn">
                </div>
            </form>
        </div>
    </div>
</div>
