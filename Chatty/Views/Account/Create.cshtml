@model Chatty.Controllers.LoginViewModel
<div class="d-flex justify-content-center h-100 p-5">
    <div class="card col-12">
        <div class="card-header">
            <h3>Kayıt Ol</h3>
        </div>
        <div class="card-body">
            <form asp-action="CreateUser">
                <div class="input-group form-group">
                    <input type="text" class="form-control" placeholder="email" asp-for="Email">
                    <span class="text-danger d-block w-100" asp-validation-for="Email"></span>
                </div>
                <div class="input-group form-group">
                    <input type="password" class="form-control" placeholder="şifre" asp-for="Password">
                    <span class="text-danger d-block w-100" asp-validation-for="Password"></span>
                </div>
                <div class="form-group">
                    <a asp-action="Login" class="btn float-left login_btn">Giriş Sayfasına Git</a>
                    <input type="submit" value="Kayıt Ol" class="btn float-right login_btn">
                </div>
            </form>
        </div>
    </div>
</div>
