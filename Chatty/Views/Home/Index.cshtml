<div class="row mt-3">
    <div class="col-md-5">
        <ul class="list-group" id="peoples"></ul>
    </div>
    <div class="col-md-7" id="chat-area">

    </div>
</div>

@section scripts
    {
    <script id="user-item-template" type="text/x-custom-template">
        <a href="javascript:;" class="list-group-item" data-user-id="{userId}">
            {name}
            <span class="badge badge-primary badge-pill counter"></span>
        </a>
    </script>

    <script id="chat-item-template" type="text/x-custom-template">
        <div data-user-id="{userId}" class="row w-100">
            <ul class="list-group w-100">
                <li class="list-group-item w-100">To: {name}</li>
            </ul>
            <div class="history w-100 h-100">
                <ul class="mt-3 w-100 float-left"></ul>
            </div>
            <input type="text" class="form-control" id="message-box" />
        </div>
    </script>
    <script src="main.js"></script>
}
